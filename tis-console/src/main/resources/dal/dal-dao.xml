<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd"
       default-autowire="byName">

  <bean id="appPackageDAO"
        class="com.qlangtech.tis.manage.biz.dal.dao.impl.AppPackageDAOImpl"
        parent="basicEndSearchDao"/>

  <bean id="applicationDAO"
        class="com.qlangtech.tis.manage.biz.dal.dao.impl.ApplicationDAOImpl"
        parent="basicEndSearchDao"/>

  <bean id="applicationApplyDAO"
        class="com.qlangtech.tis.manage.biz.dal.dao.impl.ApplicationApplyDAOImpl"
        parent="basicEndSearchDao"/>

  <bean id="groupInfoDAO"
        class="com.qlangtech.tis.manage.biz.dal.dao.impl.GroupInfoDAOImpl"
        parent="basicEndSearchDao"/>
  <bean id="serverDAO"
        class="com.qlangtech.tis.manage.biz.dal.dao.impl.ServerDAOImpl"
        parent="basicEndSearchDao"/>
  <bean id="serverGroupDAO"
        class="com.qlangtech.tis.manage.biz.dal.dao.impl.ServerGroupDAOImpl"
        parent="basicEndSearchDao"/>
  <bean id="snapshotDAO"
        class="com.qlangtech.tis.manage.biz.dal.dao.impl.SnapshotDAOImpl"
        parent="basicEndSearchDao"/>


  <bean id="serverPoolDAO"
        class="com.qlangtech.tis.manage.biz.dal.dao.impl.ServerPoolDAOImpl"
        parent="basicEndSearchDao"/>
  <bean id="zookeeperServerDAOImpl"
        class="com.qlangtech.tis.manage.biz.dal.dao.impl.ZookeeperServerDAOImpl"
        parent="basicEndSearchDao"/>
  <bean id="snapshotViewDAO"
        class="com.qlangtech.tis.manage.biz.dal.dao.impl.SnapshotViewImplDAO"
        parent="basicEndSearchDao">

    <property name="resourceParametersDAO" ref="resourceParametersDAO"/>
    <property name="uploadResourceDao" ref="uploadResourceDAO"/>
    <property name="snapshotDAO" ref="snapshotDAO"/>


  </bean>
  <bean id="uploadResourceDAO"
        class="com.qlangtech.tis.manage.biz.dal.dao.impl.UploadResourceDAOImpl"
        parent="basicEndSearchDao"/>

  <bean id="serverJoinGroupDAO"
        class="com.qlangtech.tis.manage.biz.dal.dao.impl.ServerJoinGroupDAOImpl"
        parent="basicEndSearchDao"/>


  <bean id="bizFuncAuthorityDAO"
        class="com.qlangtech.tis.manage.biz.dal.dao.impl.BizFuncAuthorityDAOImpl"
        parent="basicEndSearchDao"/>

  <bean id="usrDptRelationDAO"
        class="com.qlangtech.tis.manage.biz.dal.dao.impl.UsrDptRelationDAOImpl"
        parent="basicEndSearchDao"/>

  <bean id="usrDptExtraRelationDAO"
        class="com.qlangtech.tis.manage.biz.dal.dao.impl.UsrDptExtraRelationDAOImpl"
        parent="basicEndSearchDao"/>

  <bean id="departmentDAO"
        class="com.qlangtech.tis.manage.biz.dal.dao.impl.DepartmentDAOImpl"
        parent="basicEndSearchDao"/>


  <bean id="operationLogDAO"
        class="com.qlangtech.tis.manage.biz.dal.dao.impl.OperationLogDAOImpl"
        parent="basicEndSearchDao"/>

  <bean id="usrApplyDptRecordDAO"
        class="com.qlangtech.tis.manage.biz.dal.dao.impl.UsrApplyDptRecordDAOImpl"
        parent="basicEndSearchDao"/>


  <!-- 全局扩展资源 -->
  <bean id="globalAppResourceDAO"
        class="com.qlangtech.tis.manage.biz.dal.dao.impl.GlobalAppResourceDAOImpl"
        parent="basicEndSearchDao"/>

  <bean id="appTriggerJobRelationDAO"
        class="com.qlangtech.tis.manage.biz.dal.dao.impl.AppTriggerJobRelationDAOImpl"
        parent="basicEndSearchDao"/>


  <bean id="resourceParametersDAO"
        class="com.qlangtech.tis.manage.biz.dal.dao.impl.ResourceParametersDAOImpl"
        parent="basicEndSearchDao"/>


  <!-- 添加权限管理2013/01/24 -->

  <bean id="funcRoleRelationDAO"
        class="com.qlangtech.tis.manage.biz.dal.dao.impl.FuncRoleRelationDAOImpl"
        parent="basicEndSearchDao"/>
  <bean id="roleDAO"
        class="com.qlangtech.tis.manage.biz.dal.dao.impl.RoleDAOImpl"
        parent="basicEndSearchDao"/>
  <bean id="funcDAO"
        class="com.qlangtech.tis.manage.biz.dal.dao.impl.FuncDAOImpl"
        parent="basicEndSearchDao"/>
  <!-- 添加权限管理2013/01/24 end -->


  <bean id="rdsDbDAO"
        class="com.qlangtech.tis.manage.biz.dal.dao.impl.RdsDbDAOImpl"
        parent="basicEndSearchDao"/>

  <bean id="rdsTableDAO"
        class="com.qlangtech.tis.manage.biz.dal.dao.impl.RdsTableDAOImpl"
        parent="basicEndSearchDao"/>

  <bean id="applicationExtendDAO"
        class="com.qlangtech.tis.manage.biz.dal.dao.impl.ApplicationExtendDAOImpl"
        parent="basicEndSearchDao"/>


  <bean id="daoContext" class="com.qlangtech.tis.manage.common.RunContextImpl">
    <constructor-arg index="0" ref="appPackageDAO"/>
    <constructor-arg index="1" ref="applicationDAO"/>
    <!-- <constructor-arg index="2" ref="bizDomainDAO" /> -->
    <constructor-arg index="2" ref="groupInfoDAO"/>
    <constructor-arg index="3" ref="serverDAO"/>
    <constructor-arg index="4" ref="serverGroupDAO"/>
    <constructor-arg index="5" ref="snapshotDAO"/>
    <constructor-arg index="6" ref="snapshotViewDAO"/>
    <constructor-arg index="7" ref="uploadResourceDAO"/>
    <!-- <constructor-arg index="8" ref="authService" /> -->
    <constructor-arg index="8" ref="serverJoinGroupDAO"/>
    <!-- <constructor-arg index="10" ref="orgService" /> -->
    <constructor-arg index="9" ref="bizFuncAuthorityDAO"/>
    <constructor-arg index="10" ref="usrDptRelationDAO"/>
    <constructor-arg index="11" ref="departmentDAO"/>
    <constructor-arg index="12" ref="globalAppResourceDAO"/>
    <constructor-arg index="13" ref="appTriggerJobRelationDAO"/>
    <!--
    <constructor-arg index="14" ref="rpcCoreManage"/>
     -->
    <!-- add for implement the authorition 20130124 -->
    <constructor-arg index="14" ref="funcDAO"/>
    <constructor-arg index="15" ref="funcRoleRelationDAO"/>
    <constructor-arg index="16" ref="roleDAO"/>
    <constructor-arg index="17" ref="resourceParametersDAO"/>
    <constructor-arg index="18" ref="usrDptExtraRelationDAO"/>
    <constructor-arg index="19" ref="usrApplyDptRecordDAO"/>


    <constructor-arg index="20" ref="rdsDbDAO"/>
    <constructor-arg index="21" ref="rdsTableDAO"/>
    <constructor-arg index="22" ref="applicationExtendDAO"/>

    <constructor-arg index="23" ref="zooKeeperGetter"/>
    <constructor-arg index="24" ref="clusterStateReader"/>
    <constructor-arg index="25" ref="wfDaoFacade"/>

  </bean>

  <bean id="runContextGetter" class="com.qlangtech.tis.manage.common.RunContextGetter">
    <constructor-arg index="0" ref="daoContext"/>
  </bean>

  <bean id="basicEndSearchDao"
        class="org.springframework.orm.ibatis.support.SqlMapClientDaoSupport"
        abstract="true">
    <property name="dataSource" ref="endSearchDatasource"/>
    <property name="sqlMapClient">
      <bean class="org.springframework.orm.ibatis.SqlMapClientFactoryBean">
        <property name="configLocation" value="classpath:/dal/sqlmap-config.xml"/>
      </bean>
    </property>
  </bean>


</beans>
